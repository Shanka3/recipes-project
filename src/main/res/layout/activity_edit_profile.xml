<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.EditProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="15dp"
                android:orientation="vertical">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/changeProfileImage"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_margin="15dp"
                    android:src="@drawable/profile"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp" />

                <EditText
                    android:id="@+id/changeProfileName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:padding="12dp"
                    android:hint="Your Name"
                    android:textColor="#000000"
                    android:textSize="21sp" />

                <EditText
                    android:id="@+id/changeProfilePhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:ems="10"
                    android:inputType="phone"
                    android:padding="12dp"
                    android:hint="Phone Number"
                    android:textColor="#000000"
                    android:textSize="21sp" />

                <EditText
                    android:id="@+id/changeProfileEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:padding="12dp"
                    android:hint="Your Email Address"
                    android:textColor="#000000"
                    android:textSize="21sp" />

                <Button
                    android:id="@+id/changeProfileSave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginEnd="80dp"
                    android:layout_gravity="center"
                    android:background="@drawable/recipe_gradient"
                    android:padding="12dp"
                    android:textColor="#FFFFFF"
                    android:text="SAVE"
                    android:textSize="21sp" />


            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>